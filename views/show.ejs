<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title %></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui image rounded centered" src="<%= blog.image %>">
		</div>
		<div class="content">
			<span><%= blog.created.toDateString() %></span>
		</div>
		<div class="description">
			<%- blog.body %>	
		</div>
		<a class="ui blue basic button" href="/blogs/<%= blog._id %>/edit">Edit Post</a>
		<form id="destroy" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
			<button class="ui red basic button">
				DELETE POST
			</button>
		</form>
	</div>
	
</div>



<%- include("partials/footer") %>
